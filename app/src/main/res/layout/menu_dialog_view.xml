<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/editsharp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/connect_device"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1199EF"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_menu_dia_ip"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/editsharp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="192.168.0.100"
            android:hint="IP"/>

        <EditText
            android:id="@+id/et_menu_dia_port"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:maxLines="1"
            android:inputType="number"
            android:background="@drawable/editsharp"
            android:text="30000"
            android:hint="端口"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editsharp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="right"
            android:text="状 态："/>
        <EditText
            android:id="@+id/et_menu_dia_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:enabled="false"
            android:text="未连接"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_menu_dia_disconnect"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector_button"
            android:textColor="#fff"
            android:text="断开"/>

        <Button
            android:id="@+id/bt_menu_dia_connect"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_button"
            android:textColor="#fff"
            android:text="连接" />
    </LinearLayout>

</LinearLayout>